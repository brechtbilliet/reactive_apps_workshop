{
  "compilerOptions": {
    "target": "es5",
    "noImplicitAny": false,
    "removeComments": true,
    "sourceMap": true,
    "module": "es2015",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "outDir": "out",
    "types": [
      "es6-shim",
      "jasmine",
      "lodash",
      "node",
      "toastr"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true

  },
  "exclude": [
    "out",
    "node_modules",
    "dist",
    "reports"
  ],
  "version": "2.0.2"
}